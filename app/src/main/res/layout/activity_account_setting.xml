<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".ui.AccountSetting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="90dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="160dp"
            android:background="@drawable/defaultavatar"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="USER'S NAME"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/accountsetting_profile" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="ACCOUNT PROFILE"
            android:gravity="center_vertical"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/notification_button" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="NOTIFICATION"
            android:gravity="center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/accountsetting_password" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="CHANGE PASSWORD"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/accountsetting_cleardata" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="CLEAR DATA"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/accountsetting_logout" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="LOGOUT"
            android:gravity="center_vertical" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="616dp"
        android:layout_height="336dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/dashboardbuttom" />

</LinearLayout>